<body>
    <div class="app">
        <div class="main">
            <div class="header">
                <h1>Barcode Generator</h1>
                <button class="theme-btn" onclick="toggleTheme()">üåô</button>
            </div>
            
            <input type="text" id="textInput" placeholder="Enter text or numbers" maxlength="50">

            <div class="buttons">
                <button class="btn primary" onclick="saveBarcode()">üíæ Save PNG</button>
                <button class="btn" onclick="toggleFavorite()">‚≠ê Favorite</button>
            </div>
            
            <div class="barcode-box">
                <div id="barcode" class="placeholder">Enter text above to generate your barcode</div>
            </div>
            
            <div class="info">
                <strong>Shortcuts:</strong> Ctrl+S save, Ctrl+P print, Ctrl+D duplicate, Ctrl+T theme
            </div>
        </div>

        <div class="sidebar">
            <div class="section">
                <div class="section-header">
                    <h3>‚≠ê Favorites</h3>
                    <button class="clear-btn" onclick="clearFavorites()">Clear</button>
                </div>
                <div id="favorites">
                    <div class="empty">No favorites yet</div>
                </div>
            </div>

            <div class="section">
                <div class="section-header">
                    <h3>üïí Recent</h3>
                    <button class="clear-btn" onclick="clearHistory()">Clear</button>
                </div>
                <div id="history">
                    <div class="empty">No recent barcodes</div>
                </div>
            </div>
        </div>
    </div>

    <div id="notification" class="notification"></div>

    <script>
        var currentBarcode = null;
        var history = [];
        var favorites = [];

        function loadData() {
            try {
                var savedHistory = localStorage.getItem('history');
                if (savedHistory) {
                    history = JSON.parse(savedHistory);
                }
                var savedFavorites = localStorage.getItem('favorites');
                if (savedFavorites) {
                    favorites = JSON.parse(savedFavorites);
                }
                var savedTheme = localStorage.getItem('theme');
                if (savedTheme && savedTheme === 'dark') {
                    document.body.setAttribute('data-theme', 'dark');
                    document.querySelector('.theme-btn').textContent = '‚òÄÔ∏è';
                }
            } catch (e) {
                history = [];
                favorites = [];
            }
        }

        function saveData() {
            try {
                localStorage.setItem('history', JSON.stringify(history));
                localStorage.setItem('favorites', JSON.stringify(favorites));
            } catch (e) {
                console.log('Storage not available');
            }
        }

        function textToBarcode(text) {
            var patterns = {
                '0': '101001101101',
                '1': '110100101011',
                '2': '101100101011',
                '3': '110110010101',
                '4': '101001101011',
                '5': '110100110101',
                '6': '101100110101',
                '7': '101001011011',
                '8': '110100101101',
                '9': '101100101101',
                'A': '110101001011',
                'B': '101101001011',
                'C': '110110100101',
                'D': '101011001011',
                'E': '110101100101',
                'F': '101101100101',
                'G': '101010011011',
                'H': '110101001101',
                'I': '101101001101',
                'J': '101011001101',
                'K': '110101010011',
                'L': '101101010011',
                'M': '110110101001',
                'N': '101011010011',
                'O': '110101101001',
                'P': '101101101001',
                'Q': '101010110011',
                'R': '110101011001',
                'S': '101101011001',
                'T': '101011011001',
                'U': '110010101011',
                'V': '100110101011',
                'W': '110011010101',
                'X': '100101101011',
                'Y': '110010110101',
                'Z': '100110110101',
                ' ': '100101011011',
                '-': '100101001011',
                '.': '110010101101',
                '*': '100101101101'
            };

            var barcode = patterns['*'];
            for (var i = 0; i < text.length; i++) {
                var char = text.toUpperCase().charAt(i);
                if (patterns[char]) {
                    barcode += patterns[char];
                } else {
                    barcode += '101010101011';
                }
            }
            barcode += patterns['*'];
            return barcode;
        }

        function generateBarcode(text) {
            try {
                var canvas = document.createElement('canvas');
                var ctx = canvas.getContext('2d');
                var pattern = textToBarcode(text);
                
                var barWidth = 2;
                var barHeight = 60;
                var quietZone = 20;
                canvas.width = (pattern.length * barWidth) + (quietZone * 2);
                canvas.height = barHeight + 40;
                
                ctx.fillStyle = '#ffffff';
                ctx.fillRect(0, 0, canvas.width, canvas.height);
                
                ctx.fillStyle = '#000000';
                for (var i = 0; i < pattern.length; i++) {
                    if (pattern.charAt(i) === '1') {
                        ctx.fillRect(quietZone + (i * barWidth), 10, barWidth, barHeight);
                    }
                }
                
                ctx.fillStyle = '#000000';
                ctx.font = '12px monospace';
                ctx.textAlign = 'center';
                ctx.fillText(text, canvas.width / 2, canvas.height - 10);
                
                var img = document.createElement('img');
                img.src = canvas.toDataURL('image/png');
                img.alt = 'Barcode for: ' + text;
                img.id = 'barcode';
                img.style.cursor = 'context-menu';
                
                var container = document.getElementById('barcode').parentNode;
                container.innerHTML = '';
                container.appendChild(img);
                
                currentBarcode = {
                    text: text,
                    dataURL: img.src
                };
                
                addToHistory(currentBarcode);
                
            } catch (error) {
                var container = document.getElementById('barcode').parentNode;
                container.innerHTML = '<div id="barcode" class="placeholder">Error generating barcode</div>';
            }
        }

        function saveBarcode() {
            if (!currentBarcode) {
                showNotification('No barcode to save', 'error');
                return;
            }
            var link = document.createElement('a');
            link.download = 'barcode_' + currentBarcode.text + '.png';
            link.href = currentBarcode.dataURL;
            link.click();
            showNotification('Barcode saved!', 'success');
        }

        function toggleTheme() {
            var current = document.body.getAttribute('data-theme');
            if (current === 'dark') {
                document.body.removeAttribute('data-theme');
                document.querySelector('.theme-btn').textContent = 'üåô';
                localStorage.setItem('theme', 'light');
            } else {
                document.body.setAttribute('data-theme', 'dark');
                document.querySelector('.theme-btn').textContent = '‚òÄÔ∏è';
                localStorage.setItem('theme', 'dark');
            }
        }

        function toggleFavorite() {
            if (!currentBarcode) {
                showNotification('No barcode to favorite', 'error');
                return;
            }
            var exists = -1;
            for (var i = 0; i < favorites.length; i++) {
                if (favorites[i].text === currentBarcode.text) {
                    exists = i;
                    break;
                }
            }
            if (exists >= 0) {
                favorites.splice(exists, 1);
                showNotification('Removed from favorites', 'success');
            } else {
                favorites.unshift(currentBarcode);
                if (favorites.length > 10) {
                    favorites.pop();
                }
                showNotification('Added to favorites', 'success');
            }
            saveData();
            renderFavorites();
        }

        function addToHistory(barcode) {
            for (var i = history.length - 1; i >= 0; i--) {
                if (history[i].text === barcode.text) {
                    history.splice(i, 1);
                }
            }
            history.unshift(barcode);
            if (history.length > 10) {
                history.pop();
            }
            saveData();
            renderHistory();
        }

        function renderHistory() {
            var div = document.getElementById('history');
            if (history.length === 0) {
                div.innerHTML = '<div class="empty">No recent barcodes</div>';
                return;
            }
            var html = '';
            for (var i = 0; i < history.length; i++) {
                html += '<div class="item" onclick="loadBarcode(\'' + history[i].text + '\')">';
                html += '<span>' + history[i].text + '</span>';
                html += '<button class="remove-btn" onclick="event.stopPropagation();removeHistory(\'' + history[i].text + '\')">üóëÔ∏è</button>';
                html += '</div>';
            }
            div.innerHTML = html;
        }

        function renderFavorites() {
            var div = document.getElementById('favorites');
            if (favorites.length === 0) {
                div.innerHTML = '<div class="empty">No favorites yet</div>';
                return;
            }
            var html = '';
            for (var i = 0; i < favorites.length; i++) {
                html += '<div class="item" onclick="loadBarcode(\'' + favorites[i].text + '\')">';
                html += '<span>' + favorites[i].text + '</span>';
                html += '<button class="remove-btn" onclick="event.stopPropagation();removeFavorite(\'' + favorites[i].text + '\')">‚≠ê</button>';
                html += '</div>';
            }
            div.innerHTML = html;
        }

        function loadBarcode(text) {
            document.getElementById('textInput').value = text;
            generateBarcode(text);
            showNotification('Loaded!', 'success');
        }

        function removeHistory(text) {
            for (var i = history.length - 1; i >= 0; i--) {
                if (history[i].text === text) {
                    history.splice(i, 1);
                }
            }
            saveData();
            renderHistory();
        }

        function removeFavorite(text) {
            for (var i = favorites.length - 1; i >= 0; i--) {
                if (favorites[i].text === text) {
                    favorites.splice(i, 1);
                }
            }
            saveData();
            renderFavorites();
        }

        function clearHistory() {
            history = [];
            saveData();
            renderHistory();
            showNotification('History cleared', 'success');
        }

        function clearFavorites() {
            favorites = [];
            saveData();
            renderFavorites();
            showNotification('Favorites cleared', 'success');
        }

        function showNotification(message, type) {
            var n = document.getElementById('notification');
            n.textContent = message;
            n.className = 'notification ' + type + ' show';
            setTimeout(function() {
                n.className = 'notification ' + type;
            }, 3000);
        }

        function printBarcode() {
            if (!currentBarcode) return;
            var w = window.open('', '_blank');
            w.document.write('<img src="' + currentBarcode.dataURL + '"><script>print();close();</script>');
        }

        function duplicateBarcode() {
            if (!currentBarcode) return;
            document.getElementById('textInput').value = currentBarcode.text;
            document.getElementById('textInput').focus();
            showNotification('Duplicated!', 'success');
        }

        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey) {
                if (e.key === 's') {
                    e.preventDefault();
                    saveBarcode();
                } else if (e.key === 'p') {
                    e.preventDefault();
                    printBarcode();
                } else if (e.key === 'd') {
                    e.preventDefault();
                    duplicateBarcode();
                } else if (e.key === 't') {
                    e.preventDefault();
                    toggleTheme();
                }
            }
        });

        document.addEventListener('DOMContentLoaded', function() {
            loadData();
            renderHistory();
            renderFavorites();
            
            var input = document.getElementById('textInput');
            input.addEventListener('input', function(e) {
                var text = e.target.value.trim();
                if (text) {
                    generateBarcode(text);
                } else {
                    var container = document.getElementById('barcode').parentNode;
                    container.innerHTML = '<div id="barcode" class="placeholder">Enter text above to generate your barcode</div>';
                    currentBarcode = null;
                }
            });

            setTimeout(function() {
                input.value = 'Sample123';
                generateBarcode('Sample123');
            }, 500);
        });
    </script>
</body>
</html>
